---
const projects = [
	{
		title: "Plataforma de Gestión de Domiciliarios",
		description: "Plataforma digital para la gestión eficiente de servicios de entrega. Implementación completa con backend en Node.js y Express.js, base de datos MySQL, y sistema de autenticación JWT.",
		image: "/Runway.png",
		technologies: ["Node.js", "Express.js", "MySQL", "JWT", "React","tailwind css"],
		github: "https://github.com/victor-losada/RunWay-Project",
		demo: "https://github.com/victor-losada/RunWay-Project"
		
	},
	{
		title: "Sistema de Gestión Documental",
		description: "Plataforma que permite la gestión eficiente de documentos y versiones. Incluye API REST para el manejo de documentos y sistema robusto de seguridad y administración de usuarios.",
		image: "/Coffco.png",
		technologies: ["Node.js", "Express.js", "MongoDB", "React", "JWT","tailwind css"],
		github: "https://github.com/victor-losada/COFFCOPROJECT",
		demo: "#"
	},
	{
		title: "Pokedex",
		description: "Api pokemon , cosumo, diseño, y filtros",
		image: "/Pokedex.png",
		technologies: [ "CSS", "REACT","APis"],
		github: "https://subtle-lebkuchen-4d7497.netlify.app/",
		demo: "#"
	}, 
	{
		title: "Rick and Morty API",
		image: "/RickAndMorty.png",
		technologies: [ "CSS", "REACT","Apis"],
		github: "https://amazing-moonbeam-3176e1.netlify.app/",
		demo: "#"
	}, 
	{
		title: "Weather App",
		description: "Aplicación de clima, con consumo de api y diseño responsivo",
		image: "/Weather.png",
		technologies: [ "CSS", "REACT","Apis"],
		github: "https://transcendent-sawine-55d225.netlify.app/",
		demo: "#"
	}
	, 
	{
		title: "Galleta de la fortuna",
		description: "Aplicación de galleta de la fortuna, con consumo de api",
		image: "/Galleta.png",
		technologies: [ "CSS", "REACT","Apis","javascript"],
		github: "https://statuesque-biscochitos-8ec321.netlify.app/",
		demo: "#"
	}
];
---

<section id="proyectos" class="projects section">
	<h2 class="section-title">Proyectos</h2>

	<div class="container projects-container">
		{projects.map(project => (
			<article class="project-card glass fade-in" onclick={`window.location.href='${project.demo !== "#" ? project.demo : project.github}'`} style="cursor: pointer;">
				<div class="project-image">
					<img src={project.image} alt={project.title} loading="lazy" />
					<div class="project-links">
						<a href={project.github} target="_blank" rel="noopener noreferrer" class="project-link" onclick="event.stopPropagation()">
							<i class="fab fa-github"></i>
							<span>GitHub</span>
						</a>
						{project.demo !== "#" && (
							<a href={project.demo} target="_blank" rel="noopener noreferrer" class="project-link" onclick="event.stopPropagation()">
								<i class="fas fa-external-link-alt"></i>
								<span>Demo</span>
							</a>
						)}
					</div>
				</div>

				<div class="project-info">
					<h3 class="project-title">{project.title}</h3>
					<p class="project-description">{project.description}</p>
					
					<div class="project-technologies">
						{project.technologies.map(tech => (
							<span class="tech-tag">{tech}</span>
						))}
					</div>
				</div>
			</article>
		))}
	</div>
</section>

<style>
	.projects-container {
		cursor: pointer;
		display: flex;
		overflow-x: auto;
		gap: 2rem;
		padding: 1rem;
		scrollbar-width: thin;
		scrollbar-color: var(--primary-color) transparent;
	}

	.projects-container::-webkit-scrollbar {
		height: 8px;
	}

	.projects-container::-webkit-scrollbar-track {
		background: transparent;
	}

	.projects-container::-webkit-scrollbar-thumb {
		background-color: var(--primary-color);
		border-radius: 4px;
	}

	.project-card {
		flex: 0 0 300px;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 15px;
		overflow: hidden;
		transition: transform 0.3s ease;
		backdrop-filter: blur(10px);
	}

	.project-card:hover {
		transform: translateY(-10px);
	}

	.project-image {
		position: relative;
		width: 100%;
		height: 200px;
		overflow: hidden;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.project-card:hover .project-image img {
		transform: scale(1.1);
	}

	.project-info {
		padding: 1.5rem;
	}

	.project-info h3 {
		font-size: 1rem;
		margin-bottom: 1rem;
		color: var(--text-color);
		text-align: center;
		position: relative;
		padding-bottom: 0.5rem;
	}

	.project-info h3::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 50%;
		transform: translateX(-50%);
		width: 50px;
		height: 2px;
		background: var(--primary-color);
		border-radius: 2px;
	}

	.project-description {
		font-size: 0.95rem;
		color: var(--text-color);
		opacity: 0.8;
		margin-bottom: 1rem;
		line-height: 1.6;
	}

	.project-technologies {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
	}

	.tech-tag {
		font-size: 0.8rem;
		padding: 0.3rem 0.8rem;
		background: rgba(50, 69, 255, 0.1);
		color: var(--primary-color);
		border-radius: 20px;
	}

	@media (max-width: 768px) {
		.projects-container {
			padding: 1rem;
		}
	}
</style> 